    <script>
        // === ВСТАВИЛ ТВОЙ ID ===
        const YA_COUNTER_FOR_EVENTS = 106816491; 

        // Функция отправки событий
        function sendEvent(eventName) {
            if (typeof ym !== 'undefined' && YA_COUNTER_FOR_EVENTS !== 0) {
                ym(YA_COUNTER_FOR_EVENTS, 'reachGoal', eventName);
                console.log('Event sent:', eventName);
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            
            // 1. UTM ПАРСЕР
            const urlParams = new URLSearchParams(window.location.search);
            const utmSource = urlParams.get('utm_source');
            
            if (utmSource) {
                const waLinks = document.querySelectorAll('a[href^="https://wa.me"]');
                const addition = ` [Источник: ${utmSource}]`;
                
                waLinks.forEach(link => {
                    let href = link.getAttribute('href');
                    if (href.includes('text=')) {
                        link.setAttribute('href', href + encodeURIComponent(addition));
                    } else {
                        link.setAttribute('href', href + '?text=' + encodeURIComponent("Здравствуйте" + addition));
                    }
                });
            }

            // 2. ОТСЛЕЖИВАНИЕ КЛИКОВ WHATSAPP
            const allWaLinks = document.querySelectorAll('a[href^="https://wa.me"]');
            allWaLinks.forEach(link => {
                link.addEventListener('click', () => sendEvent('whatsapp_click'));
            });

            // 3. ОТСЛЕЖИВАНИЕ ПРОСМОТРА БЛОКОВ (SCROLL)
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.id;
                        sendEvent('view_' + id);
                        observer.unobserve(entry.target); // Отправляем 1 раз
                    }
                });
            }, { threshold: 0.5 }); // Считается просмотром, если видно 50% блока

            const sections = ['catalog', 'process', 'warehouse', 'contacts'];
            sections.forEach(id => {
                const el = document.getElementById(id);
                if (el) observer.observe(el);
            });
            
            // 4. МОБИЛЬНОЕ МЕНЮ
            window.toggleMenu = function() {
                const menu = document.getElementById('mobile-menu');
                menu.classList.toggle('hidden');
                menu.classList.toggle('flex');
            }
            
            // 5. ТЕНЬ ХЕДЕРА
            window.addEventListener('scroll', () => {
                const header = document.getElementById('navbar');
                window.scrollY > 50 ? header.classList.add('shadow-md') : header.classList.remove('shadow-md');
            });
        });
    </script>
